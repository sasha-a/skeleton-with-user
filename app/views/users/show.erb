

<% if @user.id == current_user.id %>
  <h2>Hello, <%= @user.username %>!</h2>
  <h3>Restaurants you've added:</h3>
<% else %>
  <h2><%= @user.username %>'s profile</h2>
  <h3>Restaurants <%= @user.username %> added:</h3>
<% end %>

<% if @user.has_restaurants? %>
  <ul>
      <% @user.restaurants.each do |restaurant| %>
        <li>
          <a href="/restaurants/<%= restaurant.id %>"><%= restaurant.name %></a>
          <% if my_restaurant?(restaurant) %>
            <%= erb :"/restaurants/_editor", locals: { restaurant: restaurant } %>
          <% end %>
        </li>
      <% end %>
  </ul>
<% else %>
  <h3>You have not added any restaurants yet</h3>
<% end %>




